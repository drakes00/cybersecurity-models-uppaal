// Hash function
int Hash(int msg){

 return msg*5;

}
//Encryption function
int Encrypt(int p,int m){

   return (m+(2*p));

}
//Decryption function
int Decrypt(int s,int m){

 return (m-s);

}
// Sign function
int Sign(int m,int s){

    int d;
    d:=Hash(m);
    return (d+s);

}
// CHeck sign function
bool CheckSign(int sign,int m, int p){

   int res_hash,hash;
   hash := Decrypt(2*p,sign);
   res_hash := Hash(m);
   
   if(hash==res_hash) return true;
   else return false;

}
