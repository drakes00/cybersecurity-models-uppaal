void SignAndCryptMsg(){

 int var,fun,val;
 
 var :=  tram.variable;
 fun :=  tram.function;
 val :=  tram.value;
 tram.variable   := Encrypt(public_key,tram.variable);
 tram.function   := Encrypt(public_key,tram.function);
 tram.value      := Encrypt(public_key,tram.value);
 tram.s_variable := Encrypt(public_key,Sign(var,private_key));
 tram.s_function := Encrypt(public_key,Sign(fun,private_key));
 tram.s_value    := Encrypt(public_key,Sign(val,private_key));

 //
 public_key:=0;
 private_key:=0;
}

void DecryptMsg(){

 tram.variable   := Decrypt(private_key,tram.variable);
 tram.function   := Decrypt(private_key,tram.function);
 tram.value      := Decrypt(private_key,tram.value);
 tram.s_variable := Decrypt(private_key,tram.s_variable);
 tram.s_function := Decrypt(private_key,tram.s_function);
 tram.s_value    := Decrypt(private_key,tram.s_value);
