//                                                                                                             *   
//                                    Functions for encrypt and decrypt messages                               *    
//                                                                                                             *   
//**************************************************************************************************************

// Hash function
int Hash(int msg){

 return msg*5;

}
//Encryption function
int Encrypt(int p,int m){

   return (m+(2*p));

}
//Decryption function
int Decrypt_Function(int s,int m){

 return (m-s);

}
// Sign function
int Sign_Function(int m,int s){

    int d;
    d:=Hash(m);
    return (d+s);

}
// CHeck sign function
bool Check_Sign(int sign,int m, int p){

   int res_hash,hash;
   hash := Decrypt_Function(2*p,sign);
   res_hash := Hash(m);
   
   if(hash==res_hash) return true;
   else return false;

}

void SignMsg(){
 
 msg.s_variable := Sign_Function(msg.variable,private_key);
 msg.s_function := Sign_Function(msg.function,private_key);
 msg.s_value    := Sign_Function(msg.value,private_key);
 //
 public_key:=0;
 private_key:=0;

}

void SignAndCryptMsg(){

 msg.variable   := Encrypt(public_key,msg.variable);
 msg.function   := Encrypt(public_key,msg.function);
 msg.value      := Encrypt(public_key,msg.value);
 msg.s_variable := Encrypt(public_key,Sign_Function(msg.variable,private_key));
 msg.s_function := Encrypt(public_key,Sign_Function(msg.function,private_key));
 msg.s_value    := Encrypt(public_key,Sign_Function(msg.value,private_key));
 //
 public_key:=0;
 private_key:=0;
}

void DecryptMsg(){

 msg.variable   := Decrypt_Function(private_key,msg.variable);
 msg.function   := Decrypt_Function(private_key,msg.function);
 msg.value      := Decrypt_Function(private_key,msg.value);
 msg.s_variable := Decrypt_Function(private_key,msg.s_variable);
 msg.s_function := Decrypt_Function(private_key,msg.s_function);
 msg.s_value    := Decrypt_Function(private_key,msg.s_value);
 //
 public_key:=0;
 private_key:=0;
}

void CheckSignMsg(){
 
if(Check_Sign(msg.s_variable,msg.variable,public_key) and Check_Sign(msg.s_function,msg.function,public_key) 
   and Check_Sign(msg.s_value,msg.value,public_key)){check:=true;}
else {check:=false;}

public_key:=0;
private_key:=0;
}

